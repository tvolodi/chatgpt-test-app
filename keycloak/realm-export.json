{
  "realm": "ai-dala-realm",
  "enabled": true,
  "registrationAllowed": true,
  "resetPasswordAllowed": true,
  "rememberMe": true,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role with full access"
      },
      {
        "name": "CONTENT_MANAGER",
        "description": "Content manager role with content editing access"
      }
    ]
  },
  "clients": [
    {
      "clientId": "webapp",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:4000",
        "+"
      ],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "authorizationServicesEnabled": false,
      "fullScopeAllowed": true,
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ],
      "attributes": {
        "access.token.lifespan": "900",
        "client.offline.session.idle.timeout": "2592000",
        "client.offline.session.max.lifespan": "5184000"
      }
    }
  ],
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "email": "test@ai-dala.com",
      "firstName": "Test",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "default-roles-ai-dala-realm",
        "ADMIN"
      ]
    },
    {
      "username": "ai-admin",
      "enabled": true,
      "email": "admin@ai-dala.com",
      "firstName": "Admin",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "default-roles-ai-dala-realm",
        "ADMIN"
      ]
    },
    {
      "username": "content_manager",
      "enabled": true,
      "email": "content@ai-dala.com",
      "firstName": "Content",
      "lastName": "Manager",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "content123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "default-roles-ai-dala-realm",
        "CONTENT_MANAGER"
      ]
    }
  ]
}